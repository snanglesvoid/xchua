mixin exhibition(exhibition)
  if exhibition
    .exhibition-card(
      onclick= "window.location='/exhibition/" + exhibition.slug + "'"
      data-ks-editable=editable(user, {list: 'Exhibition', id: exhibition.id})
    )
      h3= exhibition.title[lang] || exhibition.title.english
      if exhibition.thumbnail
        img(src= exhibition._.thumbnail.limit(1024, 1024))
      if exhibition.date
        p
        | #{exhibition._.date.start.format('MM DD YYYY')} #{lang == 'chinese' ? '' : 'to'} &nbsp;
        | #{exhibition._.date.end.format('MM DD YYYY')}
      p= exhibition.location.location[lang] || exhibition.location.location.english
      hr