mixin artwork(w, size=640)
  .artwork(data-ks-editable=editable(user, {list: 'Artwork', id: w.id, path: '/'}))
    img.modal-image(
      src=w._.image.limit(size, size),
      caption= w.caption(lang)
    )
    .middle 
      h3= w.title[lang] || w.title.english
      p= w.year
      p= w.description[lang] || w.description.english
      p= w.dimensions